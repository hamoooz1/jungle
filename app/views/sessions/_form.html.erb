<!-- app/views/sessions/_form.html.erb -->

<%= form_with(url: '/login', local: true) do |form| %>
  <div class="login-layout">
  <%= form.label :email %>
  <%= form.email_field :email %>

  <%= form.label :password %>
  <%= form.password_field :password %>
  </div>
  <div class="login-btn">
  <%= form.submit 'Log In' %>
  </div>
<% end %>